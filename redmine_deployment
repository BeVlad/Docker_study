---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redmine
spec:
  replicas: 1
  selector:
    matchLabels:
      app: redmine
  template:
    metadata:
      labels:
        app: redmine
    spec:
      containers:
        - name: redmine
        - image: redmine:4.1.1
          ports:
            - containerPort: 5432
          env:
            - name: REDMINE_POSTGRES_USER
              value: testuser
            - name: REDMINE_POSTGRES_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: my-password
                  key: password
        
